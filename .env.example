# Database Configuration
# For Neon.tech with connection pooling (recommended for production)
# DATABASE_URL should use the -pooler endpoint with pgbouncer=true
DATABASE_URL=postgresql://username:password@host-pooler.region.aws.neon.tech/dbname?sslmode=require&channel_binding=require&pgbouncer=true&connection_limit=10



# Direct URL for migrations (use non-pooled endpoint)
# DIRECT_URL should NOT include -pooler in the hostname
DIRECT_URL=postgresql://username:password@host.region.aws.neon.tech/dbname?sslmode=require&channel_binding=require

# Application Configuration
NODE_ENV=development
PORT=3003
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# SMTP Configuration (for notifications)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@anime-kun.com

# Media Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5000000

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=anime-kun-images
R2_PUBLIC_URL=https://pub-b37473d0af014d50941768d98a9ec79d.r2.dev/

# ImageKit Configuration (deprecated - will be removed)
# IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# Monitoring and Logging
LOG_LEVEL=info
# Sentry Error Tracking - Get your DSN from https://sentry.io → Settings → Projects → Client Keys (DSN)
SENTRY_DSN=
# Sentry OAuth Application (for fetching issues via API)
SENTRY_CLIENT_ID=
SENTRY_CLIENT_SECRET=
SENTRY_ORG_SLUG=anime-kun
# Railway environment variables (automatically set by Railway deployment)
# RAILWAY_ENVIRONMENT_NAME=production
# RAILWAY_SERVICE_NAME=anime-kun-api
# RAILWAY_DEPLOYMENT_ID=

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# API Configuration

# Database Configuration
# For Neon.tech with connection pooling (recommended for production)
# DATABASE_URL should use the -pooler endpoint with pgbouncer=true
DATABASE_URL=postgresql://username:password@host-pooler.region.aws.neon.tech/dbname?sslmode=require&channel_binding=require&pgbouncer=true&connection_limit=10

# Direct URL for migrations (use non-pooled endpoint)
# DIRECT_URL should NOT include -pooler in the hostname
DIRECT_URL=postgresql://username:password@host.region.aws.neon.tech/dbname?sslmode=require&channel_binding=require

# Application Configuration
NODE_ENV=development
PORT=3003
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# SMTP Configuration (for notifications)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@anime-kun.com

# Media Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5000000

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# API Configuration
API_VERSION=3.0.0
API_TITLE=Anime-Kun API
API_DESCRIPTION=API REST pour la base de donn√©es d'animes et mangas

# AniList API Configuration
ANILIST_CLIENT_ID=
ANILIST_CLIENT_SECRET=
ANILIST_REDIRECT_URI=

# Email Service Configuration (Mailtrap for testing)
MAILTRAP_HOST=smtp.mailtrap.io
MAILTRAP_PORT=2525
MAILTRAP_USER=your-mailtrap-username
MAILTRAP_PASS=your-mailtrap-password
MAILTRAP_FROM=noreply@anime-kun.com

# reCAPTCHA v3 Configuration
RECAPTCHA_SECRET_KEY=6LfIXd4rAAAAAP36L9HW6ldPVGAFYdUTLKbNoXuX

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGS=true
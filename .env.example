FROM_EMAIL=Anime-Kun <noreply@yourdomain.com>

# reCAPTCHA v3 Configuration
RECAPTCHA_SECRET_KEY=6LfIXd4rAAAAAP36L9HW6ldPVGAFYdUTLKbNoXuX

